{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    // "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["./src/*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@workspace/sanity-utils": ["../../packages/sanity-utils/index.ts"],
      "@workspace/sanity-utils/*": ["../../packages/sanity-utils/src/*"],
      "@workspace/sanity-types": ["../../packages/sanity-types/index.ts"],
      "@workspace/sanity-types/*": ["../../packages/sanity-types/src/*"]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "global.d.ts",
    "sanity-utils/**/*.ts,.tsx",
    "sanity-types/**/*.ts,.tsx"
  ],
  "exclude": ["node_modules"]
}

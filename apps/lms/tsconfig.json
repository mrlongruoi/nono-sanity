{
  "extends": ["@workspace/typescript-config/nextjs.json", "../../tsconfig.base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    // "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "global.d.ts",
    "sanity-utils/**/*.ts,.tsx",
    "sanity-types/**/*.ts,.tsx"
  ],
  "exclude": ["node_modules"]
}

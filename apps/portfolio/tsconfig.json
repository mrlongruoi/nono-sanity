{
  "extends": ["@workspace/typescript-config/nextjs.json", "../../tsconfig.base.json"],
  "compilerOptions": {
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "globals.d.ts"
  ],
  "exclude": ["node_modules"]
}

###############################################
# MONOREPO ROOT .env.example                #
# Copy to .env.local and fill in values     #
###############################################

# =======================
# SANITY CONFIGURATION
# =======================
# Shared across all apps - copy to each app's .env.local

# Project Configuration (Public - safe to expose)
NEXT_PUBLIC_SANITY_PROJECT_ID=next_public_project_id
NEXT_PUBLIC_SANITY_DATASET=dataset_name
NEXT_PUBLIC_SANITY_API_VERSION="2024-11-24"

# Public Read-Only Token (Public - Viewer permission)
# This token is safe to expose to browsers for live content updates
NEXT_PUBLIC_SANITY_API_TOKEN="your_public_viewer_token_here"

# Server-Only Tokens (NEVER expose to browser)
SANITY_API_READWRITE_TOKEN="your_server_readwrite_token_here"
SANITY_API_TOKEN="your_server_token_here"
SANITY_VIEWER_TOKEN="your_viewer_token_here"

# Preview Mode Secret (Server-only)
# Must match across all apps for Presentation Tool
SANITY_PREVIEW_SECRET="your_secure_random_string_here"

# =======================
# STUDIO CONFIGURATION
# =======================
# Only needed in apps/studio/.env.local

SANITY_STUDIO_PROJECT_ID=next_public_project_id
SANITY_STUDIO_DATASET=dataset_name
SANITY_API_VERSION="2024-11-24"

# Preview URLs for Presentation Tool
SANITY_STUDIO_PREVIEW_LMS_URL="http://localhost:3000"
SANITY_STUDIO_PREVIEW_REDDIT_URL="http://localhost:3001"
SANITY_STUDIO_PREVIEW_PORTFOLIO_URL="http://localhost:3002"

# =======================
# APP-SPECIFIC URLS
# =======================
# Each app needs its own base URL

# LMS
NEXT_PUBLIC_LMS_URL="http://localhost:3000"

# Reddit
NEXT_PUBLIC_REDDIT_URL="http://localhost:3001"

# Portfolio
NEXT_PUBLIC_PORTFOLIO_URL="http://localhost:3002"

# =======================
# AUTHENTICATION
# =======================
# Clerk (LMS & Reddit)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_key_here"
CLERK_SECRET_KEY="sk_test_your_key_here"
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# =======================
# PAYMENT PROCESSING
# =======================
# Stripe (LMS)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_key_here"
STRIPE_SECRET_KEY="sk_test_your_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# =======================
# AI SERVICES
# =======================
# OpenAI (Portfolio ChatKit)
OPENAI_API_KEY="sk-proj-your_key_here"
NEXT_PUBLIC_CHATKIT_WORKFLOW_ID="wf_your_workflow_id_here"

# =======================
# DEPLOYMENT (Production)
# =======================
# Vercel
VERCEL_PROJECT_PRODUCTION_URL="your-production-domain.vercel.app"

# =======================
# NOTES
# =======================
# 1. NEVER commit .env.local files to git
# 2. NEVER expose server-only tokens in NEXT_PUBLIC_* variables
# 3. Use different tokens for development and production
# 4. Rotate tokens regularly
# 5. SANITY_PREVIEW_SECRET must match in all apps and Studio

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/ui": ["../ui/src"],
      "@workspace/sanity-utils": ["../sanity-utils"],
      "@workspace/sanity-types": ["../sanity-types"],
    },
    "skipLibCheck": true
  }
}

{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    // "rootDir": "src", //change is hard code and error all projects to work
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@workspace/sanity-types": ["../sanity-types/src/index.ts"],
      "@workspace/sanity-types/*": ["../sanity-types/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
